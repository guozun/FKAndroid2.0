<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_hairdo_tab"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <FrameLayout
            android:id="@+id/id_hairdo_tab_longhair"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_hairdo_tab_longhair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/btn_big_popsubmit_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="长发"
                android:textColor="@color/white"
                android:textSize="@dimen/size_hairdo_bar_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/id_hairdo_tab_shorthair"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_hairdo_tab_shorthair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/btn_big_popsubmit_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="短发"
                android:textColor="@color/white"
                android:textSize="@dimen/size_hairdo_bar_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/id_hairdo_tab_middlehair"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_hairdo_tab_middlehair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/btn_big_popsubmit_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="中发"
                android:textColor="@color/white"
                android:textSize="@dimen/size_hairdo_bar_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/id_hairdo_tab_manhair"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_hairdo_tab_manhair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/btn_big_popsubmit_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="男发"
                android:textColor="@color/white"
                android:textSize="@dimen/size_hairdo_bar_text" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>