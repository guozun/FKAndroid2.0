<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_to_eval_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:maxHeight="60dp"
        android:maxWidth="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_to_eval_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_to_eval_head"
        android:lineSpacingMultiplier="1.2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="2dp" >

        <Button
            android:id="@+id/bt_to_eval_do"
            android:layout_width="wrap_content"
            android:layout_height="40dp" 
            android:text="评  价"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/item_to_eval_bt_selector"
            />
	
        <TextView
            android:id="@+id/tv_to_eval_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black3"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>