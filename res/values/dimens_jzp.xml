<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- hairdo里面 Bar文字大小设置 -->
    <dimen name="size_hairdo_bar_text">30sp</dimen>
    <dimen name="size_hairdo_detail_image">30dp</dimen>
    <dimen name="size_hairdo_detail_barber_textview">12sp</dimen>

    <color name="hairdo_bar">#005752</color>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <attr name="circularProgressBarStyle" format="reference" />

    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="barLength" format="dimension" />
        <attr name="contourColor" format="color" />
        <attr name="contourSize" format="dimension" />
    </declare-styleable>

    <!-- MyPage配置 -->
    <color name="color_mypage">#EDFDFE</color>

    <style name="style_ib_mypage" parent="@style/ButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/mypage_bt_selector</item>
    </style>
    <style name="style_mypage_tv" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        
        <item name="android:background">@color/color_mypage</item>
    </style>
    <style name="style_mypage_line" >
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/hline</item>
        <item name="android:layout_gravity">center_vertical</item>
        
    </style>

</resources>